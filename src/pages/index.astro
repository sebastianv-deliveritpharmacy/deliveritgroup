---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSlider from "../components/HeroSlider.vue";
import GroupIntro from "../components/GroupIntro.astro";
import SiteDetails from "../components/SiteDetails.vue";
import StickyHeader from "../components/StickyHeader.astro";
---

<BaseLayout title="DeliverIt Group" description="Infusion • Retail • Telehealth • Research & Development">
  <StickyHeader />
  
  <HeroSlider client:only="vue" />
  <GroupIntro id="about" />
<!-- Infusion: deep red -->
<SiteDetails
  client:visible
  id="infusion"
  eyebrow="Specialty Infusion"
  title="DeliverIt Infusion & Specialty"
  description="Warm, private infusion suites and expert care. Easy referrals, insurance coordination, and at-home training resources."
  points={[
    'Neurology IVIG & specialty therapies',
    'Referral forms and benefits verification',
    'Education & training videos for home infusion',
  ]}
  href="https://deliveritpharmacy.com/infusion/"
  image="/images/infusion-hero.jpg"
  alt="Infusion suite"
  ctaLabel="DeliverIt Infusion"
  flip={false}
  accent="#a12d35"   
/>

<!-- Retail: bright green -->
<SiteDetails
  client:visible
  id="retail"
  eyebrow="Retail & Family Care"
  title="DeliverIt Retail Pharmacy"
  description="Local prescriptions, vaccinations, compounding, and home delivery — built around the needs of families."
  points={[
    'Fast refills & free delivery options',
    'Vaccinations and everyday wellness',
    'Compounding services',
  ]}
  href="https://deliveritpharmacy.com/retail/"
  image="/images/retail-hero.jpg"
  alt="Retail pharmacy counter"
  ctaLabel="DeliverIt Retail"
  flip={true}
  accent="#00b341"  
/>

<!-- Telehealth: keep default brand or pick a third -->
<SiteDetails
  client:visible
  id="DeliverItHealth"
  eyebrow="Telehealth"
  title="DeliverIt Health"
  description="Doctors online—chat, phone, or video. Digital prescriptions and convenient family coverage."
  points={[
    'Same-day online visits',
    'HIPAA-ready & secure',
    'Transparent pricing',
  ]}
  href="https://deliverithealth.com/"
  image="/images/telehealth-hero.jpg"
  alt="Telehealth visit"
  ctaLabel="DeliverIt Health"
  flip={false}
  accent="#040494"
/>

<!-- Research & Development: innovation blue/teal -->
<SiteDetails
  client:visible
  id="DeliverItRAD"
  eyebrow="Research & Development"
  title="DeliverIt RAD"
  description="DeliverIt RAD partners with leading U.S. multinational companies to accelerate research and development of new medications, with a focus on oncology, cardiology, and neurology."
  points={[
    'Strategic collaboration with multinational American companies',
    'Development of innovative medications and therapies',
    'Focus areas: oncology, cardiology, and neurology',
    'Advancing healthcare through research and development',
  ]}
  href="#"
  image="/images/rd-hero.jpg"
  alt="Research and development team"
  ctaLabel="DeliverIt RAD"
  flip={true}
  accent="#008c95" 
/>

  <!-- GCC International Service Training -->
<SiteDetails
  client:visible
  id="gccTraining"
  eyebrow="International Training"
  title="GCC Service & Training Program"
  description="Bilingual support, SOP onboarding, QA standards, and device teach-backs for partners across Saudi Arabia, UAE, Qatar, Kuwait, Bahrain, and Oman."
  points={[
    'On-site & virtual training (EN/AR)',
    'SOP onboarding and compounding standards',
    'Device teach-backs and documentation',
    'Pharmacy QA and partner support',
  ]}
  href="#"
  image="/images/gcc-training-hero.jpg"
  alt="GCC service and training session"
  ctaLabel="GCC Training Program"
  flip={false}
  accent="#3467c7"
/>



</BaseLayout>
